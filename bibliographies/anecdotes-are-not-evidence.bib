	journal = {Annual Review of Psychology},
	author = {Hirst, William and Echterhoff, Gerald},
	year = {2012},
	pmid = {21961946},
	note = {\_eprint: https://doi.org/10.1146/annurev-psych-120710-100340},
	pages = {55--79},
	file = {Hirst_Echterhoff - 2012 - Remembering in Conversations.pdf:G\:\\My Drive\\Zotero\\Fecundity Blog\\Anecdotes Are Not Evidence\\Hirst_Echterhoff - 2012 - Remembering in Conversations.pdf:application/pdf},
